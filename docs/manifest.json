{
  "manifest_version": 3,
  "name": "LeetCode Sync",
  "version": "1.0.0",
  "description": "Save accepted LeetCode solutions to GitHub repositories.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*/submissions/detail/*"],
      "js": ["content_script.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
